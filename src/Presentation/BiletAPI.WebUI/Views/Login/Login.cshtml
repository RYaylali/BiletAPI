@model LoginDto
@{
    Layout = null;
}



<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title> Kayıt Ol </title>
	<link rel="stylesheet" href="/SignupForm/style.css">
</head>
<body>
	<div class="wrapper">
		<h2>Giriş Yap</h2>
		<form asp-action="Login" asp-controller="Login">
			<div class="input-box">
				<input asp-for="Mail" type="email" placeholder="Mailinizi Giriniz" required>
				<span asp-validation-for="Mail" class="text-danger" style="margin-left:15px; font-size:12px;"></span>
			</div>
			<div class="input-box">
				<input asp-for="Password" type="password" placeholder="Şifrenizi Giriniz" required>
				<span asp-validation-for="Password" class="text-danger" style="margin-left:15px; font-size:12px;"></span>
			</div>
			<div class="input-box button">
				<input type="Submit" value="Giriş Yap">
			</div>
			<div class="text">
				<h3>Kayıtlı değil misiniz? <a href="/Login/Register/">Şimdi Kayıt Ol</a></h3>
			</div>
		</form>
	</div>

</body>
</html>
